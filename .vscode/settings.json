{
  "css.validate": false,
  "tailwindCSS.includeLanguages": {
    "svelte": "html",
    "typescript": "html",
    "javascript": "html"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.inlineSuggest.enabled": true,
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "files.associations": {
    "*.css": "tailwindcss"      
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  }
}